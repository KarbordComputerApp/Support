
@{
    ViewBag.Title = "اسناد و مستندات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        padding: 10px 10px;
        background-color: #082b44;
        color: #f1f2f7;
        text-align: center;
        border: 1px solid #f1f2f7;
        font-size: 14px;
    }

    td {
        padding: 25px 10px;
        background-color: #dcdcdc;
        color: #082b44;
        text-align: center;
        border: 1px solid #f1f2f7;
        font-size: 18px;
        border-top: solid 5px #f1f2f7;
    }
</style>
<center>
    <p style="font-size: 20px;margin-bottom: 50px;">کاربر گرامی با تشکر از شما  برای ورود و استفاده از وب سایت پشتیبانی، لطفا در صورت تایید پیش نویس قرارداد/پیش فاکتور صفحه اول آن را چاپ بهمراه مهر و امضا اسکن و با مراجعه به منوی "ارتباط با بخش فروش" آن را ارسال نمایید</p>
</center>


<div style="text-align: left;padding: 10px;">
    <a id="refreshFinancial" class="">
        <img src="/Content/img/Icon_Blue/refresh.png" width="30" style="margin-left: 10px;">
    </a>
</div>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th style="border-radius: 0 20px 20px 0; max-width: 100px;">ردیف</th>
                <th>عنوان</th>
                <th>توضیحات</th>
                <!--<th>تاریخ </th>-->
                <th style=" width: 200px;">تعداد دفعات باقیمانده دانلود </th>
                <th style="border-radius: 20px 0 0 20px;">عملیات</th>
            </tr>
        </thead>

        <tbody data-bind="foreach: FinancialList" data-dismiss="modal" style="cursor: default;">
            <tr>
                <td style="border-radius: 0 30px 30px 0;">
                    <p data-bind="text: $index() + 1"></p>
                </td>
                <td data-bind="text: Title"></td>
                <td data-bind="text: Description"></td>
                <!-- <td data-bind="text: SubmitDate"> </td>-->
                <td data-bind="text: Download == null ? 2 : Math.abs(Download - 2)"> </td>
                <td style="border-radius: 30px 0 0 30px;">
                    <a data-bind="click: $parent.Download,  style : { visibility : Download >= 2 ? 'hidden' : 'visible'} ">
                        <img src="~/Content/img/Icon_Blue/Download.png" width="40" />
                    </a>

                </td>

                <!--<td>
                    <div style="border:1px solid black;padding: 10px;border-radius: 10px;">
                        <p>فقط دوبار امکان دانلود وجود دارد</p>
                        <p data-bind="text: 'عنوان :' + Title"></p>
                        <p data-bind="text: 'توضیحات :' + Description"></p>
                        <p data-bind="text: 'تاریخ :' + SubmitDate"></p>
                        <a data-bind="click: $parent.Download" class="btn btn-warning B_Main">دریافت فایل</a>
                    </div>
                </td>-->
            </tr>
        </tbody>
    </table>
</div>
    @section scripts{
        <script src="~/Scripts/FinancialDocuments.js?dt=@(Support.Controllers.Unit.UnitPublic.titleVerNumber)"></script>
    }

