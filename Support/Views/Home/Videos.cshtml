
@{
    ViewBag.Title = "ویدیوها و مقالات آموزشی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color:white;border-radius: 25px;padding: 20px; margin-bottom:20px">
    <div class="row">
        <div class="col-md-4">
            <p style="margin-bottom:0px">جستجوی کامل</p>
            <div class="row">
                <input data-bind="value: filter , valueUpdate: 'afterkeydown'" class="form-control" placeholder="عبارت را وارد کنید">
            </div>
        </div>

        <div class="col-md-3">
            <p style="margin-bottom:0px">دسته بندی</p>
            <div id="SelectVideos">
            </div>
        </div>
    </div>
</div>



