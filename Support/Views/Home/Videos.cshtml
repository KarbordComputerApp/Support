    <div class="accordion" id="accordionExample1" data-bind="foreach: FilterVideos">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne" style="border-radius: 15px;">
                    <div class="panel-title">
                        <a data-bind="click: Id == 0 ? null : $root.ShowVideo , attr: { 'data-target': Id == 0 ? '' : '#AAA' + Id } ,style: { 'background-color': Id == 0 ? '#082b44' : '#dcdcdc', 'cursor': Id == 0 ? null:'pointer'} " role="button" style="color:black;">
                            <span data-bind="text:Description , style: { 'color' :  Id == 0 ? 'white' : '#082b44'}" style="color:white"></span>
                            <img src="~/Content/img/play-icon.png" data-bind="text:Description, style: { 'display' :  Id == 0 ? 'none' : 'block' }" style="float: left;display: block;height: 25px;">
                            <img src="~/Content/img/dolar.png" data-bind="style: { 'display' :  Id == 0 ? 'none' :  IsPublic == true ? 'none' : 'block' }" style="float: left;display: block;margin-left:5px;width: 25px;">
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



<div class="modal fade" id="modal-Video" tabindex="-1" role="dialog" aria-labelledby="formModal" aria-hidden="true" dir="ltr" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="max-width:750px;max-height:500px">
        <div class="modal-content">
            <div class="modal-header" style="direction:rtl">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" title="خروج">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 id="Title_Video" class="modal-title"></h4>
                <a id=""></a>
            </div>
            <div class="modal-body">
                <div id="P_Aparat" class="h_iframe-aparat_embed_frame">
                    <span style="display: block;padding-top: 57%"></span>
                    <iframe id="F_Video" allowFullScreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" name="F_Video"></iframe>
                </div>

                <video id="videoclip" controls autoplay controlsList="nodownload" oncontextmenu="return false;" style="width: 100%;">
                    <source id="mp4video" type="video/mp4" />
                </video>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/Videos.js?dt=@(Support.Controllers.Unit.UnitPublic.titleVerNumber)"></script>
}
