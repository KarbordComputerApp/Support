@{
    ViewBag.Title = "کاربرد کامپیوتر";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="row">
    <div class="col-lg-6 PanelLeftLogin d-none d-lg-block">
        <div class="row" style="text-align:center;">
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
            </div>

            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                <img id="LogoLogin" src="~/Content/img/Logo.png" style="padding: 35% 20% 0% 20%; max-width:100%" />

                <div style="padding: 35% 20% 0% 20%;">
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 " id="datalogin">

        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-2 col-xs-2">
            </div>

            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8">

                <div class="login-form" style="direction:rtl; padding-top: 50%">

                    <p style="color: white;font-size: 20px;text-align-last: right;">بخش خدمات آنلاین کاربرد کامپیوتر</p>

                    <div style="border: 1px solid #eb8121;margin-top: 12px; margin-bottom: 30px;"></div>

                    <div class="col-sm-12">
                        <p style="color: white;text-align: right;margin-right: 20px;margin-bottom: 10px;"> شماره قفل</p>
                        <div class="form-group form-float ">
                            <div class="form-line focused fix">
                                <input type="text" id="user" class="form-control"  style="text-indent: 20px;direction: rtl;padding: 10px 0px 10px 0px"  placeholder="شماره قفل را وارد کنید"/>

                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <p style="color: white;text-align: right;margin-right: 20px;margin-bottom: 10px;">کلمه عبور</p>
                        <div class="form-group form-float">
                            <div class="form-line focused fix">
                                <input type="password" id="pass" class="form-control" style="text-indent: 20px;direction: rtl;padding: 10px 0px 10px 0px" placeholder="کلمه عبور را وارد کنید" />
                            </div>
                        </div>
                    </div>

                    <br />
                    <br />

                    <div class="form-group btn-container">
                        <button type="button" class="btn btn-primary btn-block" data-bind="click:LoginUser , text:'ورود به پنل خدمات آنلاین'" id="Login" style="background-color: #eb8121 !important;height:50px "></button>
                    </div>


                    <div class="row" style="margin-top: 15px;">
                        <div class="DotText"></div>
                        <p class="col-md" style="color: white;font-size: 10px;margin-top: 0px;text-align: right;">در صورت نداشتن اطلاعات کاربری با بخش پشتیبانی شرکت مهندسی کاربرد کامپیوتر تماس بگیرید</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="text-align:center;">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <p style="color: #fefefe;" data-bind="text:'کلیه حقوق مادی و معنوی این سایت متعلق به شرکت مهندسی کاربرد کامپیوتر میباشد'">

        </p>
    </div>
</div>




