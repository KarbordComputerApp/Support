
@{
    ViewBag.Title = "UploadFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body, html {
        background-color: white !important;
        background-repeat: no-repeat;
        background-blend-mode: soft-light;
        background-size: cover;
    }
</style>

<p style="font-size:16px">حجم فایل های ارسالی نباید بیشتر از 10 مگابایت باشد</p>
<br />
<br />

<div class="col-md" style="border:1px solid #082b44;background-color: #dcdcdc;border-radius: 25px; padding:30px">
    <div style="height: 40px; border-radius: 20px; background-color:#eb8121;width: 200px;position: absolute;top: -20px;right: 4%;white-space: inherit;">
        <center>
            <p style="color:#082b44;font-size: 15px;margin-top: 8px;">آپلود فایل</p>
        </center>
    </div>

    <div class="row">
        <div class="col-md">
            <textarea id="comm" rows="20" class="form-control no-resize auto-growth string autocomplete" style="text-align:justify;border-radius: 30px;padding: 10px;" placeholder="توضیحات فایل ارسالی خود را در این قسمت وارد نمایید"></textarea>
        </div>
        <div class="col-md">
            <input id="upload" type="file" style="display:none" data-bind="event: {change: $root.fileUpload}" />

            <a id="AddNewFile" class="btn btn-warning B_Main" style="border-radius: 25px;background-color: #128d35 !important;">انتخاب فایل</a>
            <br />
            <a id="AddNewFile" class="btn btn-warning B_Main" style="border-radius: 25px;background-color: #128d35 !important;">انتخاب فایل</a>
            <br /> <a id="AddNewFile" class="btn btn-warning B_Main" style="border-radius: 25px;background-color: #128d35 !important;">انتخاب فایل</a>
            <br />
            <br />
            <br />
            <br />
            <a id="SendFiles" class="btn btn-warning B_Main col-md-12" style="border-radius: 25px;background-color: #082b44 !important;">بار گذاری در پنل ارسال</a>
        </div>

    </div>


        
       
    </div>


@section scripts{
    <script src="~/Scripts/UploadFiles.js?dt=@(Support.Controllers.Unit.UnitPublic.titleVerNumber)"></script>
